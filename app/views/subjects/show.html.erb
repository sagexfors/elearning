<div class="container">
  <h1><%= @subject.name %></h1>
  <%= render "lessons/index", subject: @subject%>
  <%= render "activities/index", subject: @subject%>
  <br>
  <% unless current_user.student? %>
    <div class="container-fluid">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#lessonModal">
        New Lesson
      </button>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#activityModal">
        New Activity
      </button>
    </div>
  <% end %>
</div>
<div class="row">
  <!-- Modal -->
  <div class="modal fade" id="lessonModal" tabindex="-1" aria-labelledby="lessonModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="lessonModalLabel">New Lesson:</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "lessons/form", subject: @subject%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <!-- Modal -->
  <div class="modal fade" id="activityModal" tabindex="-1" aria-labelledby="activityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="activityModalLabel">New Activity:</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "activities/form", subject: @subject%>
        </div>
      </div>
    </div>
  </div>
</div>
