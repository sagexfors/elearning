<div class="container">
  <h1><%= @subject.name %></h1>
  <%= render "lessons/index", subject: @subject%>
  <%= render "activities/index", subject: @subject%>
  <br>
  <% if current_user.teacher? || current_user.admin? %>
    <div class="container-fluid">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newLessonModal">
        New Lesson
      </button>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newActivityModal">
        New Activity
      </button>
    </div>
  <% end %>
</div>
<!-- Lesson modal -->
<%= render "lesson_modal" %>
<!-- Activity modal -->
<%= render "activity_modal" %>
