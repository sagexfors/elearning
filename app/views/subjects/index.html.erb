<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Subjects</h1>
  </div>
  <div class="row">
    <% if @subjects.exists? %>
      <% @subjects.each do |subject|%>
        <%= render "subject", subject: subject%>
      </div>
    </div>
  </div>
<% end %>
<% else %>
  <li class="list-group-item">No subjects found</li>
<% end %>
</div>
</div>
<br>
<% unless current_user.student? %>
  <div class="container">
    <div class="row">
      <%= render "form", subject: @subject%>
    </div>
  </div>
<% end %>
