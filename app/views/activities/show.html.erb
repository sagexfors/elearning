<div class="container">
  <div class="card border-0">
    <div class="card-body">
      <h5 class="card-title text-center mb-4"><%= @activity.name %></h5>
      <p class="card-text lead mb-4"><%= @activity.description %></p>
      <% if @activity.file.attached? %>
        <%= render partial: "shared/file_viewer", locals: { file_url: rails_blob_url(@activity.file), file_content_type: @activity.file.content_type } %>
        <div class="d-grid gap-2 mt-4">
          <%= link_to "Download", rails_blob_path(@activity.file, disposition: "attachment"), class: "btn btn-primary btn-lg", download: true %>
        </div>
      <% else %>
        <p class="card-text">No file attached</p>
      <% end %>
    </div>
  </div>
</div>
<br>
<%= render partial: "activities/student_submission", locals: { activity: @activity } %>
