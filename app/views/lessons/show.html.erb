<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title text-center"><%= @lesson.name %></h5>
      <p class="card-text"><%= @lesson.description %></p>
      <br>
      <% if @lesson.file.attached? %>
        <%= render partial: "file_viewer", locals: { file_url: rails_blob_url(@lesson.file), file_content_type: @lesson.file.content_type } %>
        <%= link_to "Download", rails_blob_path(@lesson.file, disposition: "attachment"), class: "btn btn-primary btn-sm mt-3", download: true %>
      <% else %>
        <p class="card-text">No file attached</p>
      <% end %>
    </div>
  </div>
</div>
