<h4>Lessons</h2>
<div class="row row-cols-4">
  <% if subject.lessons.exists? %>
    <% subject.lessons.each do |lesson|%>
      <div class="col-3">
        <div class="card border-primary mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= lesson.name %></h5>
            <p class="card-text"><%= lesson.description %></p>
            <%=link_to lesson.url, lesson.url%>
            <br>
            <% unless current_user.student? %>
              <div class="btn-group" role="group">
                <%= button_to "Delete", [lesson.subject, lesson], class: "btn btn-danger btn-sm", method: :delete %>
                <%= link_to "Edit", edit_subject_lesson_path(lesson), class: "btn btn-secondary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="container">
      <p>No lessons found</p>
    </div>
  <% end %>
</div>
