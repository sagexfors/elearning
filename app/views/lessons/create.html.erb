<h2>Create Subject:</h2>
<%= form_with model: [ @subject, @subject.lessons.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :url %><br>
    <%= form.text_area :url %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
