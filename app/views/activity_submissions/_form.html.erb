<%= form_with model: ActivitySubmission.new do |form| %>
  <%= form.hidden_field :activity_id, value: activity.id %>
  <p>
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title,class: "form-control" %>
  </p>
  <p>
    <%= form.label :description, class: "form-label" %><br>
    <%= form.text_area :description,class: "form-control" %>
  </p>
  <p>
    <%= form.label :file, class: "form-label" %><br>
    <%= form.file_field :file,class: "form-control" %>
  </p>
  <p>
    <%= form.submit "Create Activity", class: "btn btn-primary"%>
  </p>
</div>
<% end %>
