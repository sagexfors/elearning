<div class="container">
  <h2>Edit Answer:</h2>
  <%= form_with model: @activity_submission do |form| %>
    <%= form.hidden_field :activity_id, value: @activity_submission.activity.id %>
    <p>
      <%= form.label :title, class: "form-label" %><br>
      <%= form.text_field :title,class: "form-control" %>
    </p>
    <p>
      <%= form.label :description, class: "form-label" %><br>
      <%= form.text_area :description,class: "form-control" %>
    </p>
    <p>
      <%= form.label :file, class: "form-label" %><br>
      <%= form.file_field :file,class: "form-control" %>
    </p>
    <p>
      <%= form.submit "Update Answer", class: "btn btn-primary"%>
    </p>
  </div>
<% end %>
</div>
