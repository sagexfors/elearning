<body class="bg-gradient-primary"  style="background-image: url(<%=image_url('bg.jpg')%>);">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-8 col-lg-8 col-md-8">
        <div class="card o-hidden bg-dark border-0 shadow-lg my-5"style="--bs-bg-opacity: .4;">
          <div class="card-body p-0 ">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
              <div class="col-lg-6 ">
                <div class="p-4">
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                  <br>
                  <div class="text-center">
                    <h1 class="h3 text-white fs-1">Sign Up</h1>
                  </div>
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control form-control-user", placeholder: "Email" %>
                    </div>
                    <div class="form-group">
                      <% if @minimum_password_length %>
                        <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-user", placeholder: "Password"   %>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-user", placeholder: "Password"   %>
                    </div>
                    <div class="actions">
                      <%= f.submit "Sign up", class: "btn btn-primary btn-user btn-block"  %>
                    </div>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary btn-sm" %><br />
                  </div>
                  <br>
                  <br>
                  <br>
                  <br>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%= render "devise/shared/links" %>
